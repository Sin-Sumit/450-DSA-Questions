2.Maximum_and_Minimum_element_with_minimum_comparison

#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main(){
    int arr[]={1,3,4,5,6,8,0};
    int n=sizeof(arr)/sizeof(arr[0]);
    int min,max;
    if (n==1){
        min=arr[0];
        max=arr[0];
    }
    int c=0;
    if (n>=2){
        if (arr[0]>arr[1]){
            min=arr[1];
            max=arr[0];
            c++;
        }
        else{
            min=arr[0];
            max=arr[1];
            c++;
        }
        int i=2;
        while (i<n-1){
            if (arr[i]>arr[i+1]){
                if (arr[i]>max){
                    max=arr[i];
                    c++;
                }
                if (arr[i+1]<min){
                    min=arr[i+1];
                    c++;
                }
                c++;
            }
            else{
                if (arr[i+1]>max){
                    max=arr[i+1];
                    c++;
                }
                if (arr[i]<min){
                    min=arr[i];
                    c++;
                }
                c++;
            }
            i+=2;
        }
        if (i<n){
            if (arr[i]>max){
                max=arr[i];
                c++;
            }
            else if (arr[i]<min){
                min=arr[i];
                c++;
            }
        }
        cout<<"MIN: "<<min<<" MAX: "<<max<<" Comparison: "<<c<<endl;
    }
    return 0;
}
